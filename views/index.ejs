<%- include("./partials/header.ejs"); %>
    <% if(locals.done) { %>

        <h1>Thank you for submitting you blog.</h1>
        <hr />
        <h1>Your blogs</h1>
        <a href="/">New Blog</a>
        <div class="oldBlogs">
        <% for(var i = 0; i < blogDetails.length; i++) { %>
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blogDetails[i].title %>
                            </h5>
                            <p class="card-text"><%= blogDetails[i].blog %></p>
                            <a href="/edit/<%= blogDetails[i].id %>" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
        </div>

    <% } else {%>
        <%- include("./partials/form.ejs"); %> 

    <% } %>

<%- include("./partials/footer.ejs") %>